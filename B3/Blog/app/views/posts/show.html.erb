<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw(@post.content) %>
</p>

<p>
  <strong>Cover:</strong>
  <%= image_tag @post.cover_url(:normal) %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @post.admin_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @post.summary %>
</p>

<%= link_to 'Back', posts_path %>

<%= link_to '添加评论', new_post_comment_path(@post.id) %>
<div>
  <table>
  <thead>
    <tr>
      <th>姓名</th>
      <th>评论</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <% if comment.post_id == @post.id && comment.is_checked  %>
        <tr>
          <td><%= comment.name %></td>
          <td><%= comment.content %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

</div>