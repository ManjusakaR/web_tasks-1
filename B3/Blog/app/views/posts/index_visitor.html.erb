
<div class="span9" id="content">

    <div class="row-fluid">
        <!-- block -->
        <div class="block">
            
          <p id="notice"><%= notice %></p>

          <h2>文章列表</h2>
          <div>
          <% if session[:admin_id]==nil %>
          <a href="login"><button>登录</button></a>
          <% end %>
          </div>
          <table>
            <thead>
              <tr>
                <th>文章封面</th>
                <th>文章标题</th>
                <th>简介</th>
                <th>分类</th>
                <th>作者</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= image_tag post.cover_url(:normal) %></td>
                  <td><%= post.title %></td>
                  <td><%= post.summary %></td>
                  <td><%= post.category %></td>
                  <td><%= post.admin_id %></td>
                  <td><%= link_to '查看全文', post %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
        <!-- /block -->
    </div>
</div>
