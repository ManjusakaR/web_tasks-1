<div class="span3" id="sidebar">
  <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
    <li>
      <a href="/posts" class="btn"><i class="icon-chevron-right"></i>全部文章</a>
    </li>
    ------------------------
    <% category_list.each do |i|%>
      <li >
        <form method="get">
          <input type="submit" name="category_active" value="<%= i %>"  >
        </form>
      </li>
    <% end %>
    ------------------------
    <% month_list.each do |i|%>
      <li >
        <form method="get">
          <input type="submit" name="month_active" value="<%= i %>"  >
        </form>
      </li>
    <% end %>
  </ul>
</div>
<div class="span9" id="content" style="margin:10px">

    <div class="row-fluid">
        <!-- block -->
        <div class="block">
            
          <p id="notice"><%= notice %></p>

          <h2>文章列表</h2>
          <div>
          <% if session[:admin_id]==nil %>
          <a href="login"><button>登录</button></a>
          <% end %>
          <a href="/feedbacks/new"><button>反馈</button></a>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>文章封面</th>
                <th>文章标题</th>
                <th>简介</th>
                <th>分类</th>
                <th>作者</th>
                <th>创建时间</th>
                <th colspan="6"></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.reverse.each do |post| %>
                <tr>
                  <td><%= image_tag post.cover_url(:normal) %></td>
                  <td><%= post.title %></td>
                  <td><%= post.summary %></td>
                  <td><%= post.category %></td>
                  <td><%= post.admin.nickname %></td>
                  <td><%= post.created_at %></td>
                  <td><%= link_to '查看全文', post %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
        <!-- /block -->
    </div>
</div>
