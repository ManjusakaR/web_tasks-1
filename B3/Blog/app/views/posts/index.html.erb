    <div class="row-fluid">
        <!-- block -->
        <div class="hero-unit">
            
          <p id="notice"><%= notice %></p>

          <h2>文章列表</h2>
          <div>
          <% if session[:admin_id]==nil %>
          <a href="login"><button>登录</button></a>
          <% end %>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th width="100px">文章封面</th>
                <th>文章标题</th>
                <th>简介</th>
                <th>分类</th>
                <th>作者</th>
                <th>发表事件</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.reverse_each do |post| %>
                <tr>
                  <td><%= image_tag post.cover_url(:normal), :class => "img-rounded" %></td>
                  <td><%= link_to "#{post.title}",post %></td>
                  <td><%= post.summary %></td>
                  <td><%= post.category %></td>
                  <td><%= post.admin.nickname %></td>
                  <td><%= post.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
        <!-- /block -->
    </div>
</div>
