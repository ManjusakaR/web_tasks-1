<p id="notice"><%= notice %></p>

<h2>待审核评论</h2>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Email</th>
      <th>Name</th>
      <th>Content</th>
      <th>Is checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <% if belong_to_admin( comment )&& !comment.is_checked %>
        <tr>
          <td><%= comment.post_id %></td>
          <td><%= comment.email %></td>
          <td><%= comment.name %></td>
          <td><%= comment.content %></td>
          <td><%= comment.is_checked %></td>
          <td><%= link_to '删除评论', "comments/#{comment.id}", method: :delete, data: { confirm: '你确定要删除吗?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

