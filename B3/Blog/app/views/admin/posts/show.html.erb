<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw(@post.content) %>
</p>

<p>
  <strong>Cover:</strong>
  <%= image_tag @post.cover_url(:normal) %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @post.admin_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @post.summary %>
</p>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Email</th>
      <th>Name</th>
      <th>Content</th>
      <th>显示状态</th>
      <th colspan="3"></th>
      <th><button>批量隐藏</button></th>
      <th><button>批量删除</button></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <% if comment.post_id == @post.id && comment.is_checked  %>
        <tr>
          <td><%= comment.post_id %></td>
          <td><%= comment.email %></td>
          <td><%= comment.name %></td>
          <td><%= comment.content %></td>
          <td><%= comment.is_checked %></td>
          <td><button>隐藏</button></td>
          <td><button>删除</button></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
