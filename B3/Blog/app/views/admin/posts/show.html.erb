
<div style="width:900px; margin:0 auto;">
  <div>
    <p id="notice"><%= notice %></p>
  </div>
  <div>
    <h2><%= @post.title %></h2>
    <p>
      <strong>分类:</strong>
      <%= @post.category %>
      <strong>作者：</strong>
      <%= session[:nickname] %>
    </p>    
    <div>
      <%= raw(@post.content) %>
    </div>
    <p>
      <strong>Cover:</strong>
      <%= image_tag @post.cover_url(:normal) %>
    </p>
    <p>
      <strong>Summary:</strong>
      <%= @post.summary %>
    </p>
  </div>
  <div>
    <table>
      <thead>
        <tr>
          <th>Post</th>
          <th>Email</th>
          <th>Name</th>
          <th>Content</th>
          <th>显示状态</th>
          <th colspan="3"></th>
          <th><button>批量隐藏</button></th>
          <th><button>批量删除</button></th>
        </tr>
      </thead>

      <tbody>
        <% @comments.each do |comment| %>
          <% if comment.post_id == @post.id && comment.is_checked  %>
            <tr>
              <td><%= comment.post_id %></td>
              <td><%= comment.email %></td>
              <td><%= comment.name %></td>
              <td><%= comment.content %></td>
              <td><%= comment.is_checked %></td>
              <td><button>隐藏</button></td>
              <td><button>删除</button></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <table>
      <thead>
        <tr>
          <th>Post</th>
          <th>Email</th>
          <th>Name</th>
          <th>Content</th>
          <th>显示状态</th>
          <th colspan="3"></th>
          <th><button>批量隐藏</button></th>
          <th><button>批量删除</button></th>
        </tr>
      </thead>

      <tbody>
        <% @comments.each do |comment| %>
          <% if comment.post_id == @post.id && !comment.is_checked %>
            <tr>
              <td><%= comment.post_id %></td>
              <td><%= comment.email %></td>
              <td><%= comment.name %></td>
              <td><%= comment.content %></td>
              <td><%= comment.is_checked %></td>
              <td><button>显示</button></td>
              <td><button>删除</button></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <%= link_to '删除', ".", method: :delete, data: { confirm: '确定要删除这篇文章吗?' } %>
    <%= link_to '编辑', edit_admin_post_path,'data-no-turbolink' => true  %> |
    <%= link_to '返回', admin_posts_path %>
  </div>
</div>