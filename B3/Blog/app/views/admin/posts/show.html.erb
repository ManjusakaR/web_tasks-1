
<div style="width:900px; margin:0 auto;">
  <div>
    <p id="notice"><%= notice %></p>
  </div>
  <div>
    <h2><%= @post.title %></h2>
    <p>
      <strong>分类:</strong>
      <%= @post.category %>
      <strong>作者：</strong>
      <%= session[:nickname] %>
      <%= image_tag @post.cover_url(:normal), :class => "img-rounded" %>
    </p>    
    <div style="margin-bottom:20px;">
      <%= sanitize(@post.content) %>
    </div>
  </div>
  <div>
    <%= link_to '删除', ".", method: :delete, data: { confirm: '确定要删除这篇文章吗?' },:class => 'btn' %>
    <%= link_to '编辑', edit_admin_post_path,'data-no-turbolink' => true,:class => 'btn'  %> |
    <%= link_to '返回', admin_posts_path,:class => 'btn' %>
  </div>
  <div >
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Content</th>
          <th>显示状态</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @comments.each do |comment| %>
          <% if comment.post_id == @post.id && comment.is_checked  %>
            <tr>
              <td><%= comment.email %></td>
              <td><%= comment.name %></td>
              <td><%= comment.content %></td>
              <td><%= comment.is_checked %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Content</th>
          <th>显示状态</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <% if comment.post_id == @post.id && !comment.is_checked %>
            <tr>
              <td><%= comment.email %></td>
              <td><%= comment.name %></td>
              <td><%= comment.content %></td>
              <td><%= comment.is_checked ? "通过" : "未通过" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>