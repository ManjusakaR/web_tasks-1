<p id="notice"><%= notice %></p>

<h1>文章列表</h1>

<table>
  <thead>
    <tr>
      <th>文章封面</th>
      <th>文章标题</th>
      <th>简介</th>
      <th>分类</th>
      <th>作者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.admin_id==session[:admin_id] %>
        <tr>
          <td><%= image_tag post.cover_url(:cover_small) %></td>
          <td><%= post.title %></td>
          <td><%= post.summary %></td>
          <td><%= post.category %></td>
          <td><%= post.admin_id %></td>
          <td><%= link_to 'Show', "posts/#{post.id}/show"%></td>
          <td><%= link_to 'Edit', edit_admin_post_path(post),'data-no-turbolink' => true %></td>
          <td><%= link_to 'Destroy', "posts/#{post.id}", method: :delete, data: { confirm: '确定要删除这篇文章吗?' } %></td>
          <td><%= post.id %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '写文章', new_admin_post_path,'data-no-turbolink' => true %>
