<div class="span3" id="sidebar">
  <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
      <li >
          <a href="/posts"><i class="icon-chevron-right"></i>全部文章</a>
      </li>
      <li class="active">
          <a href="/admin/posts"><i class="icon-chevron-right"></i>我的文章</a>
      </li>
      <li>
          <a href="/admin/posts/new" data-no-turbolink><i class="icon-chevron-right"></i>写文章</a>
      </li>
  </ul>
</div>
<div class="span9" id="content">
    <div class="row-fluid">
        <div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4>Success</h4>
          The operation completed successfully</div>

      </div>
    <div class="row-fluid">
        <!-- block -->
        <div class="hero-unit" >

          <p id="notice"><%= notice %></p>
          <h2>文章列表</h2>
          <table>
            <thead>
              <tr>
                <th>文章封面</th>
                <th>文章标题</th>
                <th>简介</th>
                <th>分类</th>
                <th>作者</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <% if post.admin_id==session[:admin_id] %>
                  <tr>
                    <td><%= image_tag post.cover_url(:normal) %></td>
                    <td><%= post.title %></td>
                    <td><%= post.summary %></td>
                    <td><%= post.category %></td>
                    <td><%= post.admin_id %></td>
                    <td><%= link_to '查看全文', "posts/#{post.id}/show"%></td>
                    <td><%= link_to '编辑', edit_admin_post_path(post),'data-no-turbolink' => true %></td>
                    <td><%= link_to '删除', "posts/#{post.id}", method: :delete, data: { confirm: '确定要删除这篇文章吗?' } %></td>
                    <td><%= post.id %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
        <!-- /block -->
                     
    </div>
</div>
