<%= form_for(@admin) do |f| %>
  <% if @admin.errors.any? %>
    <div >
      <h2><%= pluralize(@admin.errors.count, "error") %>导致注册失败，请修改后重新点击注册</h2>

      <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username,"用户名" %><br>
    <%= f.text_field :username, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :nickname,"昵称" %><br>
    <%= f.text_field :nickname,:size => 30 %>
  </div>
  <div class="field">
    <%= f.label :password,"密码" %><br>
    <%= f.password_field :password,:size => 30 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation,"确认密码" %><br>
    <%= f.password_field :password_confirmation,:size => 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
